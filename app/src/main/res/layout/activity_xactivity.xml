<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XActivity"
    android:background="@drawable/bac_coolr">

<ImageView
    android:id="@+id/confetti"
    android:layout_width="235dp"
    android:layout_height="235dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="100dp"
    android:src="@drawable/confetti1"
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageX_X"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confetti"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="28dp"
        android:backgroundTint="@color/white"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_vector_1"
            android:layout_margin="30dp"

            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВЫИГРАЛ!"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageX_X"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/to_japan"
        android:textColor="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>