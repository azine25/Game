<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac_coolr"
    tools:context="com.geek.game.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@drawable/group_2"
            app:layout_constraintBottom_toTopOf="@id/text_view_p1"
            app:layout_constraintEnd_toStartOf="@id/image2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@drawable/group_1"
            app:layout_constraintBottom_toTopOf="@id/text_view_p2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0"
            android:fontFamily="@font/montserrat"
            android:textSize="36sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/image1"
            app:layout_constraintStart_toStartOf="@id/image1"
            app:layout_constraintTop_toBottomOf="@id/image1" />

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_p1"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="@id/image2"
            app:layout_constraintStart_toStartOf="@id/image2"
            app:layout_constraintTop_toBottomOf="@id/image2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="317dp"
        android:layout_height="318dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bac"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/count">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button_21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button_22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:background="@color/not_color"
                android:textSize="60sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_reset"
        android:layout_width="196dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:text="PECTAPT"
        android:fontFamily="@font/to_japan"
        android:textSize="24sp"
        android:background="@drawable/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container1" />

    <ImageView
        android:id="@+id/line1"
        android:layout_width="294dp"
        android:layout_height="9dp"
        android:background="@drawable/ic_line_1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintEnd_toEndOf="@id/container1"
        app:layout_constraintStart_toStartOf="@id/container1"
        app:layout_constraintTop_toTopOf="@id/container1" />

    <ImageView
        android:id="@+id/line2"
        android:layout_width="294dp"
        android:layout_height="9dp"
        android:background="@drawable/ic_line_1"
        app:layout_constraintBottom_toBottomOf="@id/container1"
        app:layout_constraintEnd_toEndOf="@id/container1"
        app:layout_constraintStart_toStartOf="@id/container1"
        app:layout_constraintTop_toBottomOf="@id/line1" />
    <ImageView
        android:id="@+id/line3"
        android:layout_width="9dp"
        android:layout_height="294dp"
        android:background="@drawable/ic_line_1"
        app:layout_constraintBottom_toBottomOf="@id/container1"
        app:layout_constraintEnd_toStartOf="@id/line4"
        app:layout_constraintStart_toStartOf="@id/container1"
        app:layout_constraintTop_toTopOf="@id/container1" />

    <ImageView
        android:id="@+id/line4"
        android:layout_width="9dp"
        android:layout_height="294dp"
        android:background="@drawable/ic_line_1"
        app:layout_constraintBottom_toBottomOf="@id/container1"
        app:layout_constraintEnd_toEndOf="@id/container1"
        app:layout_constraintStart_toEndOf="@id/line3"
        app:layout_constraintTop_toTopOf="@id/container1" />

</androidx.constraintlayout.widget.ConstraintLayout >

